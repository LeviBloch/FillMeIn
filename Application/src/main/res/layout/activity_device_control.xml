<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Switch
        android:id="@+id/switchIncludeSenderNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginTop="80sp"
        android:layout_marginEnd="20sp"
        android:text="@string/include_sender_num"

        android:textColor="@android:color/secondary_text_light"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60sp">

        <TextView
            android:id="@+id/setVibrationIntensityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/set_vibration_intensity"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/vibrationIntensitySeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60sp">

        <TextView
            android:id="@+id/morseTimeUnitExplanationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/set_morse_time_unit_speed_of_message"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/morseTimeUnitSeekBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"/>
        <TextView
            android:id="@+id/morseTimeUnitTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="14sp"
            android:layout_marginTop="10sp"/>

    </LinearLayout>

</LinearLayout>